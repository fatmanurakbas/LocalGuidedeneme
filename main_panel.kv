<HomeScreen>:
    name: "home"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Local Guide"
            elevation: 4
            md_bg_color: "#5C6BC0"
            title_align: "center"
            size_hint_y: None
            height: dp(56)
            right_action_items: [["magnify", lambda x: app.open_search()]]

        # Arama alanı
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(12)
            spacing: dp(14)
            size_hint_y: None
            height: self.minimum_height

            MDTextField:
                hint_text: "Şehir, etkinlik veya mekan ara..."
                icon_left: "magnify"
                mode: "fill"
                fill_color: "#F2F2F2"
                size_hint_x: 0.95
                size_hint_y: None
                height: dp(48)
                pos_hint: {"center_x": 0.5}
                radius: [16, 16, 16, 16]

            Widget:
                size_hint_y: None
                height: dp(6)

        # Orta kısım (kaymayan sabit içerik)
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(10)
            spacing: dp(10)
            size_hint_y: 0.7  # Arama çubuğu eklediğimiz için oranı düşürdük

            # İstanbul Kartı
            MDCard:
                size_hint_y: None
                height: dp(160)
                radius: [24]
                elevation: 8
                ripple_behavior: True
                on_release: app.go_to("istanbul")

                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: dp(10)
                    padding: dp(10)

                    FitImage:
                        source: "images/istanbul.jpg"
                        size_hint_x: 0.4
                        radius: [16]
                        allow_stretch: True

                    MDBoxLayout:
                        orientation: "vertical"

                        MDLabel:
                            text: "İstanbul"
                            font_style: "H6"
                            theme_text_color: "Primary"
                            bold: True

                        MDLabel:
                            text: "Kültür, tarih ve Avrupa-Asya birleşimi."
                            font_style: "Caption"
                            theme_text_color: "Secondary"
                            shorten: True

            # Ankara Kartı
            MDCard:
                size_hint_y: None
                height: dp(160)
                radius: [24]
                elevation: 8
                ripple_behavior: True
                on_release: app.go_to("ankara")

                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: dp(10)
                    padding: dp(10)

                    FitImage:
                        source: "images/ankara.jpg"
                        size_hint_x: 0.4
                        radius: [16]
                        allow_stretch: True

                    MDBoxLayout:
                        orientation: "vertical"

                        MDLabel:
                            text: "Ankara"
                            font_style: "H6"
                            theme_text_color: "Primary"
                            bold: True

                        MDLabel:
                            text: "Başkentin huzurlu atmosferi."
                            font_style: "Caption"
                            theme_text_color: "Secondary"
                            shorten: True

        # Alt Menü
        MDBottomNavigation:
            size_hint_y: 0.15
            text_color_active: "blue"

            MDBottomNavigationItem:
                name: 'home'
                text: 'Ana Sayfa'
                icon: 'home'
                on_tab_press: app.go_to('home')

            MDBottomNavigationItem:
                name: 'planner'
                text: 'Planlayıcı'
                icon: 'calendar-text'
                on_tab_press: app.go_to('planlayici')

            MDBottomNavigationItem:
                name: 'saved'
                text: 'Kaydedilenler'
                icon: 'bookmark-outline'
                on_tab_press: app.go_to('kaydedilenler')

            MDBottomNavigationItem:
                name: 'favorites'
                text: 'Favoriler'
                icon: 'heart-outline'
                on_tab_press: app.go_to('favoriler')

            MDBottomNavigationItem:
                name: 'profile'
                text: 'Profil'
                icon: 'account'
                on_tab_press: app.go_to('profile')
